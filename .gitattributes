# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cs text eol=lf
*.tsx text eol=lf
*.ts text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Config files
*.config text eol=lf
*.conf text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.dll binary
*.exe binary
*.so binary

# Linguist language detection
*.cs linguist-language=C#
*.tsx linguist-language=TypeScript
*.ts linguist-language=TypeScript
