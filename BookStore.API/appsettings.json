{
  "JwtSettings": {
    "Secret": "ThisIsAVeryLongSecretKeyForJWTTokenGenerationThatShouldBeAtLeast256BitsLong",
    "Issuer": "BookStoreAPI",
    "Audience": "BookStoreClient",
    "ExpiryInHours": 24
  },
  "EmailSettings": {
    "From": "noreply@bookstore.com",
    "FromName": "BookStore",
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": "587",
    "SmtpUsername": "",
