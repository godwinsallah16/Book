      {
        "Name": "File",
        "Args": {
          "path": "logs/bookstore-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "FrontendSettings": {
